//
//  Extends the generic MacPacket class.
//  Fields contained within an S-MAC packet. C++ code (including getters
//  and setters for each of the fields) is subsequently generated by
//  Castalia/OMNeT++.
//
//  MacPacket contains the following fields:
//     MacRadioInfoExchange_type macRadioInfoExchange;
//     int source;
//     int destination;
//     unsigned int sequenceNumber;
//  
//  The SMacPacket additionally contains a type field, which may be one of
//  RTS, CTS, DATA, ACK, or SYNC. All packets contain a simtime_t field (same
//  size as double64), although this is only used for SYNC packets.
//
 
cplusplus {{
 #include "MacPacket_m.h"
}}
 
class MacPacket;

enum SMacPacketType {
    SMAC_PACKET_RTS = 1;
    SMAC_PACKET_CTS = 2;
    SMAC_PACKET_DATA = 3;
    SMAC_PACKET_ACK = 4;
    SMAC_PACKET_SYNC = 5;
};

packet SMacPacket extends MacPacket {
	int type enum (SMacPacketType);  // 1 byte
	simtime_t syncValue;
}
 